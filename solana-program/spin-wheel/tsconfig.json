{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "mocha",
      "chai"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
  },
  "include": [
    "tests",
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}